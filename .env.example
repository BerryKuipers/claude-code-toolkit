# Crypto Insight Environment Configuration
# Copy this file to .env and update with your values

# Bitvavo API Configuration (Required)
# Get your API credentials from: https://account.bitvavo.com/api
BITVAVO_API_KEY=your_api_key_here
BITVAVO_API_SECRET=your_api_secret_here

# AI API Keys (Optional - for chat features)
ANTHROPIC_API_KEY=sk-ant-api03-your_key_here
OPENAI_API_KEY=sk-your_openai_key_here

# Perplexity AI API (Optional - for web search and research features)
PERPLEXITY_API_KEY=pplx-your_perplexity_key_here
PERPLEXITY_MODEL=sonar-pro

# Docker User/Group Configuration (Optional - for NAS/permission compatibility)
# These control file ownership inside the container
PUID=1027
PGID=100
UMASK=002

# Application Configuration
STREAMLIT_PORT=8503
LOG_LEVEL=INFO
TZ=Europe/Amsterdam

# Optional: Override default settings
# CACHE_TIMEOUT=300
# MAX_RETRIES=3
# RATE_LIMIT_THRESHOLD=10

# Development Settings (optional)
# DEBUG=false
# MOCK_API=false

# Development Cache Configuration
ENABLE_DEV_CACHE=true
DEV_CACHE_PATH=data/dev_cache.db
CACHE_PORTFOLIO_TTL_HOURS=1
CACHE_PRICES_TTL_MINUTES=5
CACHE_TRADES_TTL_HOURS=24
