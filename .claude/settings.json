{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "git submodule update --init --remote .claude-toolkit"
          },
          {
            "type": "command",
            "command": "bash .claude-toolkit/scripts/sync-claude-toolkit.sh"
          },
          {
            "type": "command",
            "command": "bash .claude-toolkit/scripts/install-gh-cli.sh"
          }
        ]
      }
    ]
  }
}
